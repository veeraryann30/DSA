                                     printf("10. Sort Element Of List\n");
                                       printf("11. Exit\n");
                                       int choice, data;
                                       printf("Enter Choice:");
                                       scanf("%d",&choice);
                                       switch(choice){
                                        case 1:
                                        printf("Enter data:");
                                        scanf("%d",&data);
                                        insertAtBeg(data);
                                        

                                        break;
                                        case 2:
                                        printf("enter data:");
                                        scanf("%d", &data);
                                       insertAtBeg(data);

                                         break;
                                        case 3:
                                        printf("enter position:");
                                        scanf('%d',&pos);
                                        printf("enter data:");
                                        scanf("%d", &data);
                                        insertAtPosition(pos, data);

                                        break;
                                        case 4:
                                        deleteFromBeg();

                                        break;
                                        case 5:
                                        deleteFromEnd();
                                        break;
                                        case 6:
                                        printf("enter position:");
                                        scanf("%d", &pos);
                                        deleteFromPosition(pos);

                                        break;
